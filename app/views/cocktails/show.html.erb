<%content_for :title do %>
<%= @cocktail.name %>
<% end%>

<h1><%= @cocktail.name %></h1>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> <%= dose.description %></li>
<%end%>
</ul>
<%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_cocktail_path(@cocktail) %>
<%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, cocktail_path(@cocktail),
  method: :delete,
  data: { confirm: "Are you sure?" } %>

  <%= render 'doses/form'%>
