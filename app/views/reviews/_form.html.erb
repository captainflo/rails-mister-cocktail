    <%= simple_form_for [@cocktail, @review] do |f| %>
      <%= f.input :content %>
      <div id="star-rating"></div>
      <br>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
